// TC : O(n)
// SC : O(n)
class Solution {
private: 
    int dfs(TreeNode* root)
    {
        if(root==NULL) return 0;
        
        int leftReq=dfs(root->left);
        int rightReq=dfs(root->right);
        
        steps=steps+abs(leftReq)+abs(rightReq);
        
        return (root->val-1)+leftReq+rightReq;
    }
public:
    int steps=0;
    int distributeCoins(TreeNode* root) 
    {
        dfs(root);
        return steps;
    }
};
